= form_for @campaign do |f|
  - if @campaign.errors.any?
    #error_explanation
      %h2= "#{pluralize(@campaign.errors.count, "error")} prohibited this campaign from being saved:"
      %ul
        - @campaign.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :organization
    = f.collection_select :organization_id, Organization.order(:name),:id,:name, include_blank: true

  .field
    = f.label 'impact unit'
    = f.text_field :unit
  .actions
    = f.submit 'Save'
